pipeline {
    
agent any
    tools { 
        maven 'maven' 
        
    }
    stages {
        stage('Build') {
            steps {
            
                echo 'Building..'
                git 'https://github.com/NaziaFatma117/GitRestAssured/'
                bat "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                junit '**/target/surefire-reports/TEST-*.xml'
               archiveArtifacts 'target/*.jar'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}