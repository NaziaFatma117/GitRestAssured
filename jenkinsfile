pipeline {
    
agent any
    tools { 
        maven 'maven' 
        
    }
    stages {
        stage('Build') {
            steps {
            
                echo 'Building..'
                def fileList = "ls /path/to/dir".execute()
def files= []
fileList.text.eachLine {files.add(it)}
return files
               
            
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}